@model WebUI.Areas.UrlShortener.Models.ShortUrl
@{
    ViewData["Title"] = "Create a new short URL";
}

<br />

<div class="jumbotron">

    <h1>QR Code Generator</h1>

    <br />

    <p>Paste a URL link below to generate a trackable QR Code with a shortened URL</p>

    <br />

    <form asp-area="UrlShortener" asp-controller="ShortUrls" asp-action="Create" method="post">
        <div class="form-vertical">
            <div class="input-group input-group-lg">
                <input asp-for="OriginalUrl" class="form-control" placeholder="Paste the URL here..." />
            </div>
            <div class="input-group input-group-lg">
                <input asp-for="Subject" class="form-control" placeholder="Enter a subject or publication name here..." />
            </div>
            <div class="input-group input-group-lg">
                <input asp-for="LetterLink" class="form-control" placeholder="Paste a link to the letter you sent (Optional)"></input>
            </div>
            <div class="input-group input-group-lg">
                <textarea asp-for="Note" class="form-control" placeholder="Type a note here..."></textarea>
            </div>
            <div class="input-group input-group-lg">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">Generate QR Code</button>
                </span>
            </div>
        </div>
    </form>
</div>

<br />

<div>
    <h3>How To Get a Sharing Link for a QR Code</h3>
    <img src="https://s3-us-west-2.amazonaws.com/downloads.md9.us/qrcodes/find-share-link.png">
    <h3>From JW.org</h3>
    <ol>
        <li>Find the publication you want to send in your letter</li>
        <li>Click the 'Share' button</li>
        <img src="https://s3-us-west-2.amazonaws.com/downloads.md9.us/qrcodes/share-link-icon.png">
        <li>Copy the provided link address</li>
        <img src="https://s3-us-west-2.amazonaws.com/downloads.md9.us/qrcodes/copy-link.png">
        <li>Come back here to the QR Code Generator and paste in your link</li>
    </ol>
</div>